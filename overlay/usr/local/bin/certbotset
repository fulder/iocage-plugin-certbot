#!/bin/sh

set_cron() {
    echo "${cron_expression}" /usr/local/certbot/update_certs.sh > new_cron

    if crontab new_cron
    then
      sysrc -f /etc/rc.conf certbot_cron="${cron_expression}"
      rm new_cron
    else
      echo "Invalid cron expression"
      exit 1
    fi
}

if [ "$1" = "cron" ]
then
    cron_expression="$2"
    set_cron()
else
    echo "Unknown option"
fi